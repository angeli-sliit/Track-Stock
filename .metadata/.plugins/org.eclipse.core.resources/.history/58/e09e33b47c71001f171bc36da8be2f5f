package auth;

import java.io.IOException;

import jakarta.servlet.ServletException;
import jakarta.servlet.http.HttpServlet;
import jakarta.servlet.http.HttpServletRequest;
import jakarta.servlet.http.HttpServletResponse;


public class SalesInterface extends HttpServlet {
	private static final long serialVersionUID = 1L;

	
	public SalesInterface() {
		super();
	}

	protected void doGet(HttpServletRequest request, HttpServletResponse response) throws ServletException, IOException {
		
		
		String id = request.getParameter("id");
		String action = request.getParameter("action");
		
		switch(action) {
		
		case "delete":
			
		}

		if (id == null || id.isEmpty()) {
			response.sendRedirect("Saleslist/sa leslist.jsp?message=No+sales+ID+provided");
			return;
		}
		Sales itemHandler = new Sales();
		itemHandler.deleteSales(id, "Saleslist/saleslist.jsp", "Saleslist/saleslist.jsp",response);
	}
}
